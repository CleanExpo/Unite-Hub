# CRITICAL MISSING ENVIRONMENT VARIABLES
# Add these to your .env.example file

# ====================================
# Core Environment (CRITICAL)
# ====================================
NODE_ENV=development  # development|production|test
NEXT_PUBLIC_ENVIRONMENT=development  # Frontend environment indicator

# ====================================
# Email Service Providers (CRITICAL - Currently Missing)
# ====================================
# SendGrid (Primary email provider)
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_FROM_EMAIL=noreply@unite-hub.com
SENDGRID_FROM_NAME=Unite-Hub

# Gmail SMTP (Fallback provider)
GMAIL_APP_PASSWORD=your-gmail-app-password
GMAIL_FROM_EMAIL=your-email@gmail.com

# Email Configuration
EMAIL_PROVIDER=sendgrid  # sendgrid|resend|gmail
EMAIL_FALLBACK_ENABLED=true

# ====================================
# Sentry Error Monitoring (CRITICAL - Incomplete)
# ====================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token-here
SENTRY_ORG=unite-hub
SENTRY_PROJECT=unite-hub-web
SENTRY_RELEASE=production-v1.0.0

# ====================================
# Redis Caching (HIGH PRIORITY - Self-Hosted)
# ====================================
# Self-hosted Redis password (if using requirepass)
REDIS_PASSWORD=your-redis-password-here
REDIS_KEY_PREFIX=unite-hub:
# Set to true for DigitalOcean Managed Redis, false for Docker/local
REDIS_TLS_ENABLED=false

# ====================================
# Alternative Database URLs (Optional)
# ====================================
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/postgres
DATABASE_POOLER_URL=postgresql://postgres:[password]@[host]:6543/postgres?pgbouncer=true

# ====================================
# Stripe (Additional Fields)
# ====================================
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here

# ====================================
# Perplexity AI (SEO Research)
# ====================================
PERPLEXITY_API_KEY=your-perplexity-api-key

# ====================================
# Feature Flags (Common)
# ====================================
ENABLE_TELEMETRY=false
AUDIT_LOGGING_ENABLED=true
AUTO_SYNC_ENABLED=true

