# Claude AI Integration Environment Variables

# REQUIRED: Your Anthropic API key
ANTHROPIC_API_KEY=sk-ant-api03-...

# OPTIONAL: Model configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# OPTIONAL: Rate limiting
CLAUDE_ENABLE_RATE_LIMITING=true
CLAUDE_RATE_LIMIT_REQUESTS=100
CLAUDE_RATE_LIMIT_WINDOW=60000

# OPTIONAL: Streaming
CLAUDE_ENABLE_STREAMING=true

# OPTIONAL: Logging
CLAUDE_ENABLE_LOGGING=true
CLAUDE_LOG_LEVEL=info

# OPTIONAL: Error reporting
CLAUDE_REPORT_ERRORS=true

# OPTIONAL: Cache configuration
CLAUDE_CACHE_ENABLED=true
CLAUDE_CACHE_TTL=3600
CLAUDE_CACHE_MAX_SIZE=100

# OPTIONAL: API URL (for client-side requests)
NEXT_PUBLIC_API_URL=http://localhost:3008
