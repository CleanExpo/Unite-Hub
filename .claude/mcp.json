{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "env": {
        "PLAYWRIGHT_BROWSER": "chromium",
        "PLAYWRIGHT_HEADLESS": "true"
      },
      "description": "Playwright - Browser automation for testing and scraping"
    },
    "digitalocean": {
      "command": "npx",
      "args": [
        "-y",
        "@digitalocean/mcp",
        "--services",
        "apps"
      ],
      "env": {
        "DIGITALOCEAN_API_TOKEN": "${DIGITALOCEAN_API_TOKEN}"
      },
      "description": "DigitalOcean MCP - Manage apps, droplets, databases, domains, and infrastructure"
    },
    "stripe": {
      "command": "npx",
      "args": [
        "-y",
        "@stripe/mcp",
        "--tools=all",
        "--api-key=${STRIPE_SECRET_KEY}"
      ],
      "env": {
        "STRIPE_SECRET_KEY": "${STRIPE_SECRET_KEY}"
      },
      "description": "Stripe MCP - Create products, prices, checkout sessions, manage subscriptions, invoices, and payments"
    },
    "suburb-authority": {
      "command": "node",
      "args": [
        ".claude/mcp_servers/suburb-authority/dist/index.js"
      ],
      "env": {
        "NEXT_PUBLIC_SUPABASE_URL": "${NEXT_PUBLIC_SUPABASE_URL}",
        "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_SERVICE_ROLE_KEY}",
        "MCP_TRANSPORT": "stdio"
      },
      "description": "Suburb Authority MCP - Query suburb_authority_substrate view for geographic and content gap analysis (Scout Agent)"
    }
  }
}
