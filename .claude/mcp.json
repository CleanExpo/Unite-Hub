{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "env": {
        "PLAYWRIGHT_BROWSER": "chromium",
        "PLAYWRIGHT_HEADLESS": "true"
      }
    },
    "sherlock-think-alpha": {
      "command": "node",
      "args": [
        ".claude/mcp_servers/sherlock-think/index.js"
      ],
      "description": "Sherlock Think Alpha - 1.84M context thinking model via OpenRouter"
    },
    "dataforseo": {
      "command": "npx",
      "args": [
        "dataforseo-mcp-server"
      ],
      "env": {
        "DATAFORSEO_API_LOGIN": "${DATAFORSEO_API_LOGIN}",
        "DATAFORSEO_API_PASSWORD": "${DATAFORSEO_API_PASSWORD}"
      },
      "description": "DataForSEO API - SEO intelligence (SERP, competitors, keywords, backlinks, local GEO)"
    },
    "digitalocean": {
      "command": "npx",
      "args": [
        "@digitalocean/mcp@latest"
      ],
      "env": {
        "DIGITALOCEAN_API_TOKEN": "${DIGITALOCEAN_API_TOKEN}"
      },
      "description": "DigitalOcean MCP - Manage apps, droplets, databases, domains, and infrastructure"
    }
  }
}
