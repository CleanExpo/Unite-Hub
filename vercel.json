{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/", "destination": "/synthex" },
    { "source": "/(.*)", "destination": "/synthex/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "x-app-surface", "value": "synthex" }
      ]
    }
  ]
}
