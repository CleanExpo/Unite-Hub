{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "rm -rf node_modules && npm install --legacy-peer-deps",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/agents/continuous-intelligence",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/aido/google-curve/monitor",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/seo/sync-rankings",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/managed/scheduler/weekly",
      "schedule": "0 9 * * 1"
    }
  ]
}
