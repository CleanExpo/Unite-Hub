# MCP Server Configuration - Copy to .env and fill in your values
# This file contains all environment variables needed for the MCP servers

# ============================================================================
# Gateway Configuration
# ============================================================================

# Port for MCP Gateway (routes to all MCP servers)
MCP_GATEWAY_PORT=3200

# Log level (debug, info, warn, error)
MCP_LOG_LEVEL=info

# Rate limiting configuration
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# Filesystem MCP Server
# ============================================================================

# Maximum file size for read operations (in MB)
MAX_FILE_SIZE_MB=50

# Enable file system watching (boolean)
ENABLE_WATCH=false

# ============================================================================
# Process MCP Server
# ============================================================================

# Maximum concurrent background processes
MAX_CONCURRENT_PROCESSES=5

# Command execution timeout (in milliseconds)
COMMAND_TIMEOUT_MS=300000

# ============================================================================
# Database MCP Server
# ============================================================================

# Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Alternative: NEXT_PUBLIC_SUPABASE_URL and SUPABASE_SERVICE_ROLE_KEY
# These are detected if SUPABASE_URL and SUPABASE_SERVICE_KEY are not set

# Query configuration
QUERY_TIMEOUT_MS=30000
MAX_RESULT_ROWS=1000

# ============================================================================
# Git MCP Server
# ============================================================================

# Git user configuration (optional, uses system git config if not set)
GIT_USER_NAME=Claude Code
GIT_USER_EMAIL=claude@code.dev

# GitHub configuration (optional, for PR creation)
GITHUB_TOKEN=ghp_your-github-token

# ============================================================================
# Docker Compose Configuration
# ============================================================================

# Workspace root (where the Unite-Hub project is mounted)
WORKSPACE_ROOT=/workspace

# Cache directory for MCP operations
CACHE_DIR=/cache

# Network configuration
# MCP services communicate on this network (created automatically)
MCP_NETWORK=mcp-network

# ============================================================================
# Resource Limits (Docker Compose)
# ============================================================================

# CPU and memory limits per service (configure in docker-compose.mcp.yml)
# Example: cpus: "0.5" (50% of one CPU), memory: 512M

# ============================================================================
# Optional: Additional Services
# ============================================================================

# Stripe Integration (if using Stripe MCP)
STRIPE_SECRET_KEY=sk_test_your-key

# DigitalOcean Integration (if using DigitalOcean MCP)
DIGITALOCEAN_API_TOKEN=your-api-token

# DataForSEO Integration (if using DataForSEO MCP)
DATAFORSEO_API_LOGIN=your-login
DATAFORSEO_API_PASSWORD=your-password

# ============================================================================
# Instructions
# ============================================================================
#
# 1. Copy this file to .env in the same directory:
#    cp docker/mcp/.env.example docker/mcp/.env
#
# 2. Edit docker/mcp/.env and fill in your values
#
# 3. The .env file is loaded automatically by docker-compose:
#    docker-compose -f docker-compose.mcp.yml up
#
# 4. Do NOT commit .env to version control (add to .gitignore)
#
# 5. For production, use secure methods to manage secrets:
#    - AWS Secrets Manager
#    - HashiCorp Vault
#    - GitHub Secrets
#    - Azure Key Vault
#
