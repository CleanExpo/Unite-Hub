FROM node:24-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy agent code
COPY docker/agents/entrypoints/content-calendar-agent.mjs ./

# Copy environment
COPY .env.local ./

# Set environment
ENV NODE_ENV=production

# Run agent
CMD ["node", "content-calendar-agent.mjs"]
